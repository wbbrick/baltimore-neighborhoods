{
  "name": "neighborhoods",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "style": [
    "app/styles/main.less",
    "app/styles/map.less",
    "app/styles/modal.less",
    "./node_modules/leaflet/dist/leaflet.css",
	  "./node_modules/semantic-ui/dist/semantic.min.css"
  ],
  "scripts": {
    "browser-sync": "browser-sync start --server './dist' --reload-delay 50 --files 'dist/scripts/main.js, dist/styles/main.css'",
      "clean": "rimraf dist && mkdir dist && mkdir dist/scripts && mkdir dist/data && mkdir dist/styles",
	  "watch:icons" : "cpx \"node_modules/semantic-ui/dist/themes/default/assets/fonts/icons.*\" \"dist/styles/themes/default/assets/fonts/\" -w",
	  "watch:html" : "cpx \"app/*.html\" \"dist\" -w",
	  "watch:data" : "cpx \"app/data/*\" \"dist/data\" -w",
    "watch:copy": "npm run watch:html & npm run watch:data & npm run watch:icons",
    "serve": "npm run clean && npm run watch:js & npm run watch:copy & npm run browser-sync ",
    "watch:js": "watchify app/scripts/main.js -p [ parcelify -wo dist/styles/main.css ] -dv -o 'exorcist dist/scripts/main.js.map > dist/scripts/main.js --base ./scripts'"
  },
	"browser": {
		"d3": "./node_modules/d3/d3.min.js",
    "underscore": "./node_modules/lodash/index.js"
  },
  "browserify": {
    "transform": [
      "jstify",
      "babelify"
    ]
  },
  "author": "Bryan Brick",
  "license": "ISC",
  "devDependencies": {
    "babelify": "^7.1.0",
    "browser-sync": "^2.9.11",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.11",
    "cpx": "^1.2.1",
    "exorcist": "^0.4.0",
    "jstify": "^0.12.0",
    "less-css-stream": "^1.0.0",
    "parcelify": "^2.1.0",
    "rimraf": "^2.4.3",
    "watchify": "^3.6.0"
  },
  "dependencies": {
    "backbone": "^1.2.3",
    "better-console": "^0.2.4",
    "bootswatch": "^3.3.5",
    "d3": "^3.5.6",
    "del": "^2.0.2",
    "esri-leaflet": "^1.0.0",
    "extend": "^3.0.0",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-chmod": "^1.3.0",
    "gulp-clone": "^1.0.0",
    "gulp-concat": "^2.6.0",
    "gulp-concat-css": "^2.2.0",
    "gulp-copy": "0.0.2",
    "gulp-dedupe": "0.0.2",
    "gulp-flatten": "^0.2.0",
    "gulp-header": "^1.7.1",
    "gulp-help": "^1.6.1",
    "gulp-if": "^2.0.0",
    "gulp-less": "^3.0.3",
    "gulp-minify-css": "^1.2.1",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-print": "^2.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-rtlcss": "^0.1.4",
    "gulp-uglify": "^1.4.2",
    "gulp-util": "^3.0.7",
    "gulp-watch": "^4.3.5",
    "jquery": "^2.1.4",
    "leaflet": "^0.7.7",
    "lodash": "^3.10.1",
    "map-stream": "0.0.6",
    "redux": "^3.0.4",
    "require-dot-file": "^0.4.0",
    "run-sequence": "^1.1.4",
    "semantic-ui": "^2.1.6",
    "sidebar-v2": "git+https://github.com/Turbo87/sidebar-v2.git",
    "stampit": "^2.1.1",
    "topojson": "^1.6.19",
    "yamljs": "^0.2.4"
  }
}
